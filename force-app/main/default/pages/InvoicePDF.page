<apex:page standardController="InvoiceC__c" lightningStylesheets="true">
    <apex:pageBlock>
    <b>Force Training<br></br></b>
    <p><br></br>Invoice: {!InvoiceC__c.Invoice_ID__c}<br></br></p> 
    <p>Course: {!InvoiceC__c.Course__r.Name}<br></br></p>
    <apex:dataTable value="{!InvoiceC__c.Invoice_Lines__r}" var="InvoiceLine" id="table">
        
    <apex:column>
        <apex:facet name="header">Invoice Type</apex:facet>
        <apex:outputText value="{!InvoiceLine.RecordTypeId}"/>
    </apex:column>
    <apex:column>
        <apex:facet name="header">Date</apex:facet>
        <apex:outputText value="{!InvoiceLine.Date__c}"/>
    </apex:column>
    <apex:column>
        <apex:facet name="header">Expense Amount</apex:facet>
        <apex:outputText value="{!InvoiceLine.Expense_Amount__c}"/>
    </apex:column>
    <apex:column>
        <apex:facet name="header">Miles Travelled</apex:facet>
        <apex:outputText value="{!InvoiceLine.Miles_Travelled__c}"/>
    </apex:column>
    <apex:column>
        <apex:facet name="header">Service Hours</apex:facet>
        <apex:outputText value="{!InvoiceLine.Hours__c}"/>
    </apex:column>
    </apex:dataTable>
    <p><br></br>Total Service Hours: {!InvoiceC__c.Total_Service_Hours__c}<br></br></p>
    <p>Total Mileage: {!InvoiceC__c.Total_Mileage__c}<br></br></p>
    <p>Total Expense (Excluding mileage): £{!InvoiceC__c.Total_Expense_Excluding_Mileage__c}<br></br></p>
    <p><b>Sub Total:</b> £{!InvoiceC__c.Sub_Total__c}<br></br></p> 
    <p><b>VAT:</b> £{!InvoiceC__c.VAT__c}<br></br></p>  
    </apex:pageBlock>
</apex:page>